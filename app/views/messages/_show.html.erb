<div id="message_<%= message.id %>" class="message <%= (user.id == message.sender.id) ? 'received' : 'sent' %>">
  <%= link_to image_tag(message.sender.image.thumb.url, :class => 'img-rounded'), message.sender %>
  <%= simple_text message.content %>
  <%= time_tag message.created_at, humanize_datetime(message.created_at) %>
</div>