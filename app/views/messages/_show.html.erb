<tr>
  <td>
    <% if user.id != message.sender.id %>
      <%= link_to image_tag(message.sender.avatar.thumb.url, :class => 'size20'), message.sender %>
    <% end %>
  </td>
  <td><%= simple_format message.content %></td>
  <td>
    <% if user.id == message.sender.id %>
      <%= link_to image_tag(message.sender.avatar.thumb.url, :class => 'size20'), message.sender %>
    <% end %>
  </td>
</tr>