<div id="message_<%= message.id %>" class="well message <%= (user.id == message.sender.id) ? 'received' : 'sent' %>">
  <%= link_to image_tag(message.sender.avatar.thumb.url, :class => 'size20'), message.sender %>
  <%= simple_format message.content %>
  <div class="timestamp">
    <% if message.created_at > 1.day.ago %>
      <%= distance_of_time_in_words_to_now message.created_at %>
    <% else %>
      <%= l message.created_at, format: :short %>
    <% end %>
  </div>
</div>