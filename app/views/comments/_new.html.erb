<h3>New Comment</h3>

<%= simple_form_for([comment.commentable,comment]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content, as: :text, label: false, input_html: {:class => 'input-xlarge', rows: '6'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('action.comment') %>
  </div>
<% end %>
