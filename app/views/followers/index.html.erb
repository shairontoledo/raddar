<% page_title t('follower.p') + ' - ' + @followable.name %>

<div class="page-header">
  <h1>
    <%= @followable.name %>
    <small><%= t 'follower.p' %></small>
  </h1>
</div>

<div class="row">
  <div class="span12">
    <ul class="thumbnails">
      <% @followers.each do |follower| %>
        <% user = follower.user %>

        <li class="span2">
          <%= link_to user.url, :class => 'thumbnail' do %>
            <%= image_tag user.image.small.url %>
            <h5><%= user.name %></h5>
          <% end %>
        </li>
          
      <% end %>
    </ul>
  </div>
</div>

<%= will_paginate @followers %>