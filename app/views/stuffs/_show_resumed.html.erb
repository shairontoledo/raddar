<div class="media">
  <%= link_to image_tag(stuff.image.small.url, :class => 'img-polaroid media-object'), pub_stuff_path(stuff.pub, stuff), :class => 'pull-left' %>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to stuff.name, pub_stuff_path(stuff.pub, stuff) %></h4>
    <% unless defined?(hide_pub) && hide_pub %>
      <p><em><%= link_to stuff.pub.name, stuff.pub %></em></p>
    <% end %>
    <p class="justified"><%= truncate strip_tags(stuff.content), length: 450, separator: ' ' %></p>
  </div>
</div>
<hr />