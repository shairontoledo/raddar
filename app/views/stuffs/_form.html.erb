<%= simple_form_for([@stuff.pub,@stuff], :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= image_tag @stuff.cover.thumb.url unless @stuff.cover.file.nil? %>
    <%= f.input :cover, as: :file %>
    <%= f.input :cover_cache, as: :hidden %>
    <%= f.input :content, as: :text, input_html: {:class => 'span6', rows: '8'} %>
    <%= render 'tags/input', {form: f} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to t('action.delete'), @stuff, confirm: 'Are you sure?', method: :delete if @stuff.persisted? && can?(:destroy, @stuff) %>
  </div>
<% end %>
