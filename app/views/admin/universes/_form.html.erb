<%= simple_form_for(@universe, :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= image_tag @universe.cover.thumb.url unless @universe.cover.file.nil? %>
    <%= f.input :cover, as: :file %>
    <%= f.input :cover_cache, as: :hidden %>
    <%= f.input :description, as: :text, input_html: {:class => 'span6', rows: '8'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to t('action.delete'), @universe, confirm: 'Are you sure?', method: :delete if @universe.persisted? && can?(:destroy, @universe) %>
  </div>
<% end %>
