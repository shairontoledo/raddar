<% admin_page_title t('page.p') %>

<%= render 'admin/shared/header', {active: :pages} %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= t('page.name') %> / <%= t('page.url') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td>
          <%= link_to page.url, page.url %>
        </td>
        <td>
          <%= edit_button edit_admin_page_path(page) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= will_paginate @pages %>

<%= link_to t('page.new'), new_admin_page_path %>
