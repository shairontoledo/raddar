<% admin_page_title t('user.edit') %>

<ul class="breadcrumb">
  <li>
    <%= link_to t('action.admin'), admin_root_path %> <span class="divider">/</span>
  </li>
  <li>
    <%= link_to t('user.p'), admin_users_path %> <span class="divider">/</span>
  </li>
  <li class="active"><%= t('action.edit') %></li>
</ul>

<h1><%= image_tag @user.image.thumb.url %> <%= @user.name %></h1>

<%= simple_form_for(@user, :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :status, collection: [:active, :blocked], as: :radio_buttons %>
    <%= f.association :roles, as: :check_boxes, collection: Role.all, label_method: lambda {|role| t("role.#{role.name}")} %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>