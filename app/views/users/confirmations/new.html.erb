<% page_title t('user.confirmation.resend') %>

<div class="page-header">
  <h1><%= t 'user.confirmation.resend' %></h1>
</div>


<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true %>
  </div>

  <div class="form-actions">
    <%= submit_button f, t('user.confirmation.resend') %>
  </div>
<% end %>
