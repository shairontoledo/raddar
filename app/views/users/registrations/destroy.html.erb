<% page_title t('user.registration.destroy') %>

<%= render 'users/shared/settings_header', {active: :destroy} %>

<div class="alert alert-block">
  <%= t 'user.registration.destroy_help' %>
</div>

<%= simple_form_for(@user, url: user_registration_path, method: :delete, :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :password, autocomplete: "off", :required => true %>
  </div>

  <div class="form-actions">
    <%= submit_button f, t('user.registration.destroy') %>
  </div>
<% end %>