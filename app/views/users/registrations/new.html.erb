<% page_title t('user.registration.new') %>

<div class="page-header">
  <h1><%= t 'user.registration.new' %></h1>
</div>

<div class="row">
  <div class="span6">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => 'form-horizontal'}) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name, hint: t('user.name_help'), autofocus: true %>
        <%= f.input :email %>
        <%= f.input :password, autocomplete: "off", required: true %>
        <%= f.input :password_confirmation, required: true %>
        <%= f.input :date_of_birth, input_html: {value: (resource.date_of_birth.nil? ? '' : l(resource.date_of_birth)), :class => 'datepicker' } %>
        <%= f.input :gender, collection: [:female, :male], as: :radio_buttons %>
        <%= f.input :location, as: :hidden %>
        <%= f.input :bio, as: :hidden %>
        <%= f.input :remote_image_url, as: :hidden %>
        <%= terms_of_use_field %>
      </div>

      <div class="form-actions">
        <%= submit_button f, t('user.registration.new') %>
      </div>
    <% end %>
  </div>

  <div class="span6">
    <%= render 'users/shared/links' %>
  </div>
</div>
