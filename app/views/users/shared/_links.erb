<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider) do %>
      <%= image_tag "omniauth/#{provider}/sign_in_button.png", alt: t('action.sign_in_with', provider: provider.to_s.titleize) %>
    <% end %>
    <br />
  <% end %>
<% end %>

<%- if controller_name != 'sessions' %>
<%= controller_name %>
  <%= link_to t('action.sign_in'), new_session_path(resource_name) %>
  <br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('action.sign_up'), new_registration_path(resource_name) %>
  <br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to t('action.forgot_password'), new_password_path(resource_name) %>
  <br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('action.confirmation_not_received'), new_confirmation_path(resource_name) %>
  <br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
  <br />
<% end -%>

