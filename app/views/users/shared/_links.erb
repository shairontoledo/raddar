<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.select{|p| [:facebook].include? p }.each do |provider| %>
    <p>
      <%= link_to omniauth_authorize_path(resource_name, provider), :class => 'btn btn-block btn-large' do %>
        <%= image_tag "omniauth/#{provider}/logo.png", :class => 'size20' %>
        <%= t 'user.session.with', provider: provider.to_s.titleize %>
      <% end %>
    </p>
  <% end %>
<% end %>

<% if controller_name == 'sessions' %>
  <p class="centered"><strong><%= t :or %></strong></p>
  <p><%= link_to t('user.registration.new'), new_registration_path(resource_name), :class => 'btn btn-block btn-large' %></p>
<% end %>

<div class="well">

  <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <p><%= link_to t('user.password.new'), new_password_path(resource_name) %></p>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p><%= link_to t('user.confirmation.not_received'), new_confirmation_path(resource_name) %></p>
  <% end %>
</div>