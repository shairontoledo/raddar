<%= render 'admin/header', {active: :users} %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= t('user.name') %></th>
      <th><%= t('role.p') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td>
          <% user.roles.each do |role| %>
            <%= t("role.#{role.name}") %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_user_path(user), :class => "btn" do %>
            <i class="icon-edit"></i>
            <%= t('action.edit') %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>