<% page_title t('user.following', user: @user.name) %>

<div class="page-header">
  <h1><%= t 'user.following', user: @user.name %></h1>
</div>
<div class="row">
<div class="span9">
  <ul class="thumbnails">
  <% @followerships.each do |followership| %>
    <% followable = followership.followable %>
    
      <li class="span2">
        <%= link_to followable.url, :class => 'thumbnail' do %>
          <%= image_tag followable.image.thumb.url unless followable === Forum %>
          <div class="caption">
            <h5 class="post_user_name"><%= followable.name %></h5>
            <p></p>
          </div>
       
        <% end %>
      </li>
    
  <% end %>
  </ul>
</div>
</div>

<%= will_paginate @followerships %>