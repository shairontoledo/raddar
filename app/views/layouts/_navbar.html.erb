<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to t('application.title'), root_path, :class => 'brand' %>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to 'Blog', '#' %></li>
          <li><%= link_to 'Forums', '#' %></li>
          <li><%= link_to 'Stuffs', '#' %></li>
          <li><%= link_to 'Groups', '#' %></li>
        </ul>
        <%= form_tag search_path, method: :get, :class => 'navbar-search' do %>
          <%= text_field_tag :q, nil, :class => 'search-query', placeholder: t('action.search')  %>
        <% end %>
        <ul class="nav pull-right">
          <% unless user_signed_in? %>
            <li><%= link_to t('action.sign_in'), new_user_session_path %></li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= image_tag current_user.avatar.thumb.url, :class => 'size20' %> <%= current_user.name %></a>
              <ul class="dropdown-menu">
                <li><%= link_to t('user.account.my'), current_user %></li>
                <li><%= link_to t('user.account.edit'), edit_user_registration_path %></li>
                <li class="divider"></li>
                <li><%= link_to t('action.sign_out'), destroy_user_session_path, :method=>'delete' %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>