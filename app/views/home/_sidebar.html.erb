<div class="span3">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      
      <li class="nav-header"><%= t 'universe.p' %></li>
      <% available_universes.each do |universe| %>
        <li><%= link_to universe.name, universe %></li>
      <% end %>

      <li class="nav-header"><%= t 'index.new_users' %></li>
      <% last_users.each do |user| %>
        <li>
          <%= link_to user do %>
            <%= image_tag user.image.thumb.url, :class => 'size20' %>
            <%= user.name %>
          <% end %>
        </li>
      <% end %>

    </ul>
  </div>
</div>