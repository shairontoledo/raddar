<div class="page-header">
  <h1><%= t 'search.for', term: params[:q] %></h1>
</div>

<ul>
  <% @results.each do |result| %>
    <li>
      <%= link_to result.url do %> 
        <h3>
          <%= result.class.model_name.human %>
          <%= result.name unless result[:name].blank? %>
        </h3>
        <small><%= search_result_text result, params[:q] %></small>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate @results %>
