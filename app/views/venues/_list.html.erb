<h5><%= t 'venue.nearby.html', term: term.downcase %></h5>

<% if venues.empty? %>
  <p><%= t 'venue.nearby.empty.html', term: term.downcase %></p>
<% else %>
  <ul class="media-list">
    <% venues.each do |venue| %>
      <li class="media"  id="venue_<%= venue.id %>">
        <%= link_to image_tag(venue.image.thumb.url, :class => 'img-rounded media-object'), venue, :class => 'venue_link pull-left' %>
        <div class="media-body">
          <address>
            <strong><%= link_to venue.name, venue %></strong>
            <br/>
            <%= venue.address %>
            <br/>
            <%= venue.city %>
          </address>
          <%= hidden_field_tag :lat, venue.coordinates.last, id: nil %>
          <%= hidden_field_tag :lng, venue.coordinates.first, id: nil %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>