<% page_title @venue.name %>

<div class="page-header">
  <h1><%= @venue.name %></h1>
</div>

<div class="row venue">
  <div class="span6">
    <%= image_tag @venue.image.full.url, :class => 'img-polaroid main_img' unless @venue.image.file.nil? %>

    <div class="description justified">
      <%= rich_format @venue.description %>
    </div>

    <address>
      <%= @venue.address %>
      <br/>
      <%= @venue.city %>
    </address>

    <%= render 'tags/index', {taggable: @venue} %>
  </div>

  <div class="span6">
    <div id="map_venue" class="map_canvas"></div>
    <%= hidden_field_tag :lat, @venue.coordinates.last %>
    <%= hidden_field_tag :lng, @venue.coordinates.first %>

    <%= render 'votes/show', {votable: @venue} %>

    <%= link_to t('venue.report'), new_contact_path, :class => 'btn btn-mini pull-right' %>    
  </div>
</div>

<%= render 'comments/index', {commentable: @venue} %>