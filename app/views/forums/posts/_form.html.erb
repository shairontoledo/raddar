<%= simple_form_for([@post.topic.forum,@post.topic,@post]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= render 'forums/posts/form_inputs', {form: f, post: @post} %>
  </div>

  <div class="form-actions">
    <%= submit_button f, t('action.reply') %>
    <%= back_button %>
  </div>
<% end %>
