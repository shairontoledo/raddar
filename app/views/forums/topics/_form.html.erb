<%= simple_form_for([@topic.forum,@topic], html: {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <% unless @topic.persisted? %>
      <%= f.simple_fields_for @post do |pf| %>
        <%= render 'forums/posts/form_inputs', {form: pf, post: @post} %>
      <% end %>
    <% end %> 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to t('action.delete'), @topic, :class => 'btn', method: :delete, confirm: 'Are you sure?' if can? :destroy, @topic %>
  </div>
<% end %>
