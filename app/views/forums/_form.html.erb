<%= simple_form_for(@forum) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description, as: :text %>
    <%= f.input :universe_id, collection: available_universes, label: t('universe.s') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
