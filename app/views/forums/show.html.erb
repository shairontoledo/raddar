<div class="page-header">
  <h1><%= @forum.name %></h1>
</div>

<div class="well">
  <%= simple_text @forum.description %>
</div>

<%= render 'followerships/followers', {followable: @forum} %>
<br/>
<%= render 'followerships/follow_button', {followable: @forum} if user_signed_in? %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= t('forum.topic.last') %></th>
      <th><%= t('forum.topic.post.p') %></th>
      <th><%= t('forum.topic.views') %></th>
      <th><%= t('forum.topic.post.last') %></th>
    </tr>
  </thead>
  <tbody>
  <% @topics.each do |topic| %>
    <tr>
      <td><%= link_to topic.name, forum_topic_path(@forum,topic) %></td>
      <td><%= topic.posts.count %></td>
      <td><%= topic.views %></td>
      <td>
        <% last = topic.posts.last %>
        <% unless last.blank? %>
          <%= link_to raw("#{last.user.name}, #{time_tag last.created_at, humanize_datetime(last.created_at)}"), last.url %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @topics %>
<%= link_to(t('forum.topic.new'), new_forum_topic_path(@forum), :class => 'btn') if can? :new, Topic %>