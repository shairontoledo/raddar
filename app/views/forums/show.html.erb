<div class="page-header">
  <h1><%= @forum.title %></h1>
</div>

<div class="well">
  <%= simple_format @forum.description %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= t('forum.topic.last') %></th>
      <th><%= t('forum.topic.post.p') %></th>
      <th><%= t('forum.topic.views') %></th>
      <th><%= t('forum.topic.post.last') %></th>
    </tr>
  </thead>
  <tbody>
  <% @topics.each do |topic| %>
    <tr>
      <td><%= link_to topic.title, forum_topic_path(@forum,topic) %></td>
      <td><%= topic.posts.count %></td>
      <td><%= topic.views %></td>
      <td>
        <% last = topic.posts.last %>
        <% unless last.blank? %>
          <%= last.user.name %>, <%= humanize_datetime last.created_at %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @topics %>
<%= link_to(t('forum.topic.new'), new_forum_topic_path(@forum), :class => 'btn') if can? :new, Topic %>