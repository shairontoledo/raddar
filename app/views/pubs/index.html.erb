<% page_title t('pub.p') %>

<div class="page-header">
  <h1><%= t 'pub.p' %></h1>
</div>

<div>
<% @pubs.each do |pub| %>
  <div class="well">
    <h5><%= pub.name %></h5>
    <%= image_tag pub.image.thumb.url %>
    <p><%= link_to pub.subtitle, pub %></p>
  </div>
<% end %>
</div>

<br />

<%= link_to 'New Pub', new_pub_path if can? :new, Pub %>
