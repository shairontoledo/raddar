<div class="page-header">
  <h1>
    <%= @pub.name %>
    <small><%= @pub.subtitle %></small>
  </h1>
</div>
<%= edit_button edit_pub_path(@pub) if can? :edit, @pub %>

<%= render 'followerships/followers', {followable: @pub} %>
<br/>
<%= render 'followerships/follow_button', {followable: @pub} if user_signed_in? %>

<%= image_tag @pub.cover.thumb.url %>

<div class="well">
  <%= rich_format @pub.description %>
</div>

<% @stuffs.each do |stuff| %>
  <div>
    <h3><%= link_to stuff.name, [@pub, stuff] %></h3>
    <%= image_tag stuff.cover.thumb.url %>

    <div>
      <%= rich_format stuff.content %>
    </div>
  </div>
<% end %>



<%= link_to t('stuff.new'), new_pub_stuff_path(@pub), :class => 'btn' if can? :new, @pub.stuffs.new %>
