<%= simple_form_for(@pub, :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :subtitle %>
    <%= image_tag @pub.image.thumb.url unless @pub.image.file.nil? %>
    <%= f.input :image, as: :file %>
    <%= f.input :image_cache, as: :hidden %>
    <%= f.input :description, as: :text, input_html: {:class => 'span6', rows: '8'} %>
    <%= f.input :universe_id, collection: available_universes, label: t('universe.s') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= destroy_button @pub if @pub.persisted? && can?(:destroy, @pub) %>
  </div>
<% end %>
