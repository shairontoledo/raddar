<%= simple_form_for(@pub, :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :subtitle %>
    <%= image_tag @pub.cover.thumb.url %>
    <%= f.input :cover, as: :file %>
    <%= f.input :cover_cache, as: :hidden %>
    <%= f.input :description, as: :text, input_html: {:class => 'span6', rows: '8'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to t('action.delete'), pub, confirm: 'Are you sure?', method: :delete if @pub.persisted? && can?(:destroy, @pub) %>
  </div>
<% end %>
