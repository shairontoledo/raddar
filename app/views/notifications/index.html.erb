<% page_title t('notification.p') %>

<div class="page-header">
  <h1><%= t 'notification.p' %></h1>
</div>

<div class="span8 offset2">
  <table class="table table-striped" id="all_notifications">
    <% @notifications.each do |notification| %>
      <tr>
        <td rowspan="2">
          <%= link_to image_tag(notification.image_path, :class => 'img-rounded'), notification %>
        </td>
        <td class="notification_text">
          <%= link_to notification do %>
            <%= raw notification.content %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to time_tag(notification.created_at, humanize_datetime(notification.created_at)), notification %>
        </td>  
      </tr>
    <% end %>
  </table>
  <%= will_paginate @notifications %>
</div>