<% if Rails.env.production? && defined?(Raddar::config.google_analytics) && !Raddar::config.google_analytics['account_id'].blank? %>
window._gaq = window._gaq or []
window._gaq.push ['_setAccount', '<%= Raddar::config.google_analytics['account_id'] %>']
window._gaq.push ['_trackPageview']

(->
  ga = document.createElement 'script'
  ga.type = 'text/javascript'
  ga.async = true
  ga.src = (if 'https:' is document.location.protocol then 'https://ssl' else 'http://www') + '.google-analytics.com/ga.js'
  s = document.getElementsByTagName('script')[0]
  s.parentNode.insertBefore ga, s
)()
<% end %>